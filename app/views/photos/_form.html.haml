= simple_form_for Photo.new, :remote => true do |f|
  = f.input :gallery_id, :as => :hidden, :input_html => { :value => @gallery.id }
  = f.input :key, :as => :hidden
  = f.input :caption
  #photo_preview_thumb.thumbnail.hide
  = f.filepicker_field :image, :button_class => "btn btn-mini", store_location: "S3", store_access: "public"
  .divider
  =f.submit 'Add Photo', class: "btn btn-success pull-right", "data-disable-with" => "Saving..."
