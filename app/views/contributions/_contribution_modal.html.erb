<div class="modal hide fade modal-large" id="contribution_modal">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal">&times;</button>
    <h3>Donate to: <%= @project.page_title %></h3>
  </div>
  <div id="contribution_modal_body" class="modal-body">
    <%= render 'contributions/form' %>
  </div><!-- modal-body -->
  <div class="modal-footer">
    <button id="contribution_next" class="btn pull-right">Next</button>
    <button id="submit_contribution" class="btn btn-primary pull-right hide" data-disable-with="Processing...">Submit</button>
  </div>
</div><!-- modal -->