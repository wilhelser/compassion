- cache project do
  = div_for(project, :class => "project-card") do
    - if user_signed_in?
      - if current_user.can_manage_project(project)
        .project_manage_btns
          = link_to "View", project, :class => "btn btn-success btn-mini pull-left"
          = link_to "Dashboard", dashboard_project_path(project), :class => "btn btn-success btn-mini pull-right"
        / project_manage_btns
    .project-thumb-wrapper
      = link_to project do
        %img{src: "#{project.image_url}", alt: "#{project.page_title}", width: "200", height: "150"}
    / project-thumb-wrapper
    .clearfix
    %h5.bbcard_name
      = link_to project do
        = project.page_title
    .divider
    .project_excerpt
      = truncate(project.stripped_content.html_safe, length: 100)
    / project_excerpt
    .clearfix
    .divider
    .project_index_statswrap
      .clearfix
      .project-index-progress.progress.progress-striped.active.bar-green
        .bar{style: "width: #{project.percent_funded}%"}
      / progress
      .clearfix
      %ul.project-stats
        %li.first.funded
          %strong>
            = project.percent_funded.to_i
            \%
          funded
        %li.pledged
          %strong>
            $#{project.goal_amount.to_i}
          target
        %li.last.ksr_page_timer
          %strong= project.contributions.size
          backers
    / project_index_statswrap
    .clear
