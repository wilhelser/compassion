#contractor_selected_modal.modal.hide.fade
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal"} &#215;
    %h3 Contractor Selected!
  .modal-body
    %p
      You have selected #{@contractor.name if @contractor} as your contractor.
    .clearfix
  / modal-body
  .modal-footer
    %button.btn.pull-right{"data-dismiss" => "modal"} Close
