#edit.tab-pane
  #project_edit_form_wrap
    = simple_form_for @project, :remote => true, :html => { :method => "put"} do |f|
      %fieldset
        %legend
          Project Category
          %small Select all that apply
        = f.association :categories, :as => :check_boxes, :label => false
        .divider
      .clearfix
      %fieldset.span8.np-section
        %legend Project Info
        #goal_amount_wrap.input-prepend.input-append
          %span#dollar-prepend.add-on $
          = f.text_field :goal_amount, disabled: true, :placeholder => "Goal Amount", :id => "appendedPrependedInput"
          %span#cents-append.add-on .00
        = f.input :page_title, :placeholder => "Page Title", "data-ideal" => "required", :input_html => { :maxlength => 60, :class => "input-large" }
        .clearfix
        = render 'toolbar'
        = f.input :page_message, :class => "edit_project_content", :rows => "10", "data-ideal" => "required", :input_html => { :id => "edit-wysihtml5-textarea" }, :label => false
        .clearfix
        %p
          %small Make this project private. ( Your project will not show up in searches )
        .make-switch{"data-off-label" => "NO", "data-on-label" => "YES"}
          = f.check_box :private, :label => "Make this project private"
        .divider
      .clearfix
      %fieldset#address_info_wrap.span8.np-section
        %legend
          Address Info
          %small Required only for construction projects
        .span4
          = f.input :street_address, :placeholder => "Street Address", :label => "Street Address ( construction projects only )"
          = f.input :state, :as => :select, :collection => us_states, :placeholder => "State", :selected => @user.state, :input_html => { :value => "#{@user.state}" }
        / span4
        .span4
          = f.input :city, :placeholder => "City", :input_html => { :value => "#{@user.city}" }
          = f.input :zip_code, :as => :string, :placeholder => "Zip Code"
        / span4
        .clearfix
        .divider
      / address_info_wrap
      .clearfix
      .divider
      .span8.np-section
        = f.submit "Update", :class => "btn btn-primary"
      / np-section
      = render 'projects/wysiwyg'
  / project_edit_form_wrap
