#cta_box.span12
  .divider
  #action-slug.pull-left
  - if user_signed_in?
    = link_to "Create an Action!", new_user_project_path(current_user), :class => "pull-right", :id => "home-create-action-btn"
  - else
    = link_to "Create an Action!", new_user_registration_path, :class => "pull-right", :id => "home-create-action-btn"
  .clearfix
  #request-debugger.hide
    %p Request Location:
    = request.location.inspect
    = request.inspect
  .divider
.clearfix
.span3
  .title
    %h4 Search Categories
  #home_categories_select_wrap
    = render 'project_nav_search'
    .inner
      %ul#home_categories_select
        - @categories.each do |category|
          %li
            = link_to "#{category.name}", category
.span9
  .home-projects-wrap
    .title
      %h4 Featured Actions
    - if @projects.any?
      = render @projects
    - else
      %p Sorry, there are no actions in this category yet...
    .clearfix
    .divider
    = link_to "See All", category_path(:id => "all"), :class => "btn btn-success btn-mini pull-right"
    .clearfix
  .clearfix
  = render 'projects_near_me'
  = render 'friends_projects'
.clearfix
