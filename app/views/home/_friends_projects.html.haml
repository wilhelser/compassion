#home-friends-wrap.home-projects-wrap
  .title
    %h4
      Created by Friends
  - if user_signed_in? || token_exists?
    - if @friends_projects.any?
      = render partial: 'projects/project', :collection => @friends_projects
    - else
      %p
        Sorry, no results found.
    .clearfix
    .divider
    - if @friends_projects.any?
      = link_to "See All", category_path(id: "friends"), :class => "btn btn-success btn-mini pull-right"
    .clearfix
  - else
    %p Log in to Facebook to see Actions created by your friends.
    = link_to "Log In", @oauth_url, :class => "btn btn-primary btn-large pull-left", "data-disable-with" => "Authorizing..."
= render 'projects/share_on_fb_js'
