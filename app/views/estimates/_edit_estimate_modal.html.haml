#edit_estimate_modal.modal.hide.fade.modal-large
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal"} &#215;
    %h3 Create Estimate
  #edit-estimate-form-wrap.modal-body

  .modal-footer
    %button.btn{"data-dismiss" => "modal"} Cancel
    #send_estimate_form.btn.btn-primary.pull-right{"data-disable-with" => "Saving..."} Save

:javascript
  $(document).delegate('#send_estimate_form', 'click', function() {
    $('.edit_estimate').submit();
  });
