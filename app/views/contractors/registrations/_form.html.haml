= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    %fieldset
      %legend Create your Login Information
      .span4
        = f.input :email, :required => true
      .span4
        = f.input :password, :required => true
      .span3
        = f.input :password_confirmation, :required => true
    %fieldset
      %legend Basic Company Information
      .span4
        = f.input :name, :required => true, :label => "Company Name"
        = f.input :state, :as => :select, :collection => us_states, :required => true
        = f.input :owner_phone, as: :string, :required => true, :label => "Phone Number"
      .span4
        = f.input :street_address, :required => true, :label => "Primary Business Address"
        = f.input :zip_code, :as => :string, :required => true
        = f.input :cell_phone, as: :string, :required => true, :label => "Cell Number"
      .span3
        = f.input :city, :required => true
        = f.input :coverage_radius, :as => :select, :collection => coverage_radius_options, :label => "Coverage Radius ( in miles )"
    .divider
    .span7
      = f.input :terms, inline_label: "By clicking this box, you understand and are agreeing to all the items outlined in the Contractor Code of Business Practices and Application Requirements and give us permission to contact the references given in your application."
    .clearfix
  .divider
  = f.button :submit, "Sign Up", :class => "btn btn-primary btn-large", "data-disable-with" => "Saving..."
