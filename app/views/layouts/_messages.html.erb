<div class="container">
  <div class="row">
    <div class="span10 offset1">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="alert alert-<%= name == :notice ? 'success' : 'error' %>">
            <a class="close" data-dismiss="alert">Ã—</a>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
